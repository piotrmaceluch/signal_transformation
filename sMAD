// Example program
#include <iostream>
#include <string>
#include <array>
//==========================================================================================
std::array<const int,16> inputBits        = {0,1,0,1,1,1,1,0,1,0,0,0,1,1,1,0};
std::array<const double ,6>  bandwithsMHz = {1.4 , 3.0 , 5.0 , 10.0 , 15.0 , 20.0};
const double duration = 0.667e-7;
static int licznik = 0;

//==========================================================================================
class point
{
    private:

    protected:
        double amplitude;
        double phase;
        int fourBits[4];
    public:
        virtual ~point() = default;
};

class modulator : public point
{
    private:

    protected:
        
    public:
        void setInputBits(const int inputBits[]);
        void setMappingPoints();
};

class demodulator : public point
{
    private:

    protected:
        
    public:

};

// class interface : public modulator , public demodulator // pozwala na wywolywanie metod modulatora i demodulatora
// {
//     public:
//          void mappingI( std::array<modulator,4> mArray); //
// };

void mapping(std::array<modulator,4> mArray);
//==========================================================================================


int main()
{
    std::array<modulator,4> mArray;
    std::array<demodulator,4> dArray;
       
    mapping(mArray);
}


//===========================================================================================
void mapping(std::array<modulator,4> mArray)
{
	for(int i=0 ; i<4 ; i++)
	{
		mArray[i].setMappingPoints();
	}
}

void modulator::setMappingPoints()
{
	for(int j=0 ; j<4 ; j++)
	{
		fourBits[j]= inputBits[licznik];
		licznik++;
		std::cout<<fourBits[j];
	}
	std::cout<<std::endl;
}

